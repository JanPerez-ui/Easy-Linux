import subprocess

def easy_linux():
    print("Welcome to Easy Linux! Type 'exit' to quit.")
    
    while True:
        # User input (shell command)
        command = input("user@easy_linux:~$ ")

        # Exit the terminal on 'exit' command
        if command.lower() == "exit":
            print("Exiting Easy Linux...")
            break
        
        try:
            # Run the shell command and capture the output
            result = subprocess.run(command, shell=True, capture_output=True, text=True)

            # Display the command output or errors
            if result.stdout:
                print(result.stdout)
            if result.stderr:
                print(result.stderr)
        except Exception as e:
            print(f"Error: {e}")

if __name__ == "__main__":
    easy_linux()
